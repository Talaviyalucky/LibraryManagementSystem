@model IEnumerable<LibraryManagement.Models.Borrow>

@{
    ViewData["Title"] = "My Books";
    Layout = "_Layout";
}

<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        color: white;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        background-color: rgba(0, 0, 0, 0.85);
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.6);
    }

    .table th {
        color: #00b4db;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .table td {
        vertical-align: middle;
    }

    .btn-return {
        background-color: #ff4b5c;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 5px;
        transition: 0.3s;
    }

    .btn-return:hover {
        background-color: #e63946;
    }

    .btn-back {
        background-color: #00b4db;
        color: white;
        font-weight: 600;
        border-radius: 6px;
        padding: 8px 15px;
        text-decoration: none;
        transition: 0.3s;
    }

    .btn-back:hover {
        background-color: #0093b8;
    }

    .badge-returned {
        background-color: #28a745;
        color: white;
        padding: 6px 10px;
        border-radius: 5px;
        font-size: 0.85rem;
    }
</style>

<div class="container mt-5 text-white">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4 text-info">My Issued Books</h2>

        @if (!Model.Any())
        {
            <p class="text-center text-muted">No books issued yet.</p>
        }
        else
        {
            <table class="table table-dark table-striped text-center align-middle">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th>Issued On</th>
                        <th>Return Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Book?.Title</td>
                            <td>@item.Book?.Author</td>
                            <td>@item.Book?.Category</td>
                            <td>@item.IssueDate.ToString("dd-MM-yyyy")</td>
                            <td>@(item.ReturnDate?.ToString("dd-MM-yyyy") ?? "Not Returned")</td>
                            <td>
                                @if (item.ReturnDate == null)
                                {
                                    <form asp-action="Return" asp-route-id="@item.Id" method="post" style="display:inline;">
                                        <button type="submit" class="btn-return">Return</button>
                                    </form>
                                }
                                else
                                {
                                    <span class="badge-returned">Returned</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <div class="text-end mt-3">
            <a asp-action="Index" class="btn-back">Back to All Books</a>
        </div>
    </div>
</div>
