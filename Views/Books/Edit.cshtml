@model LibraryManagement.Models.Book

@{
    ViewData["Title"] = "Edit Book";
}

<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        color: white;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .edit-card {
        background: rgba(20, 20, 20, 0.9);
        padding: 40px;
        border-radius: 12px;
        width: 450px;
        margin: 100px auto;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.6);
    }

    .edit-card h2 {
        text-align: center;
        color: #00b4db;
        margin-bottom: 25px;
    }

    .form-control {
        background-color: #1e1e1e;
        border: 1px solid #333;
        color: white;
        border-radius: 8px;
        padding: 10px;
        margin-bottom: 20px;
        width: 100%;
    }

    .form-control:focus {
        border-color: #00b4db;
        outline: none;
    }

    .btn {
        background-color: #00b4db;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        border: none;
        font-weight: 600;
        width: 100%;
        transition: 0.3s;
    }

    .btn:hover {
        background-color: #0093b8;
    }

    .back-link {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: #00b4db;
        text-decoration: none;
    }

    .back-link:hover {
        text-decoration: underline;
    }
</style>

<div class="edit-card">
    <h2>Edit Book</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input asp-for="Title" class="form-control" placeholder="Title" />
        <input asp-for="Author" class="form-control" placeholder="Author" />
        <input asp-for="Category" class="form-control" placeholder="Category" />

        <button type="submit" class="btn">Update Book</button>
    </form>

    <a asp-action="Index" class="back-link">Back to List</a>
</div>
